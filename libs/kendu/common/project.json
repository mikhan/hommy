{
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/kendu/common/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/kendu/common",
        "main": "libs/kendu/common/src/index.ts",
        "tsConfig": "libs/kendu/common/tsconfig.lib.json",
        "assets": ["libs/kendu/common/*.md"]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/kendu/common/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/kendu/common"],
      "options": {
        "jestConfig": "libs/kendu/common/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["type:lib", "scope:shared", "target:common"]
}
