{
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/kendu/browser/src",
  "prefix": "core",
  "targets": {
    "build": {
      "executor": "@nrwl/angular:ng-packagr-lite",
      "outputs": ["dist/libs/kendu/browser"],
      "options": {
        "project": "libs/kendu/browser/ng-package.json",
        "tailwindConfig": "libs/kendu/browser/tailwind.config.js"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/kendu/browser/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/kendu/browser/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/kendu/browser"],
      "options": {
        "jestConfig": "libs/kendu/browser/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": ["libs/kendu/browser/**/*.ts", "libs/kendu/browser/**/*.html"]
      }
    }
  },
  "tags": ["type:lib", "scope:shared", "target:browser"]
}
